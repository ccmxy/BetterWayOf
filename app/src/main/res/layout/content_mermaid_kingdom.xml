<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_mermaid_kingdom"
    tools:context="com.example.colleenminor.theadventure.ui.water.MermaidKingdomActivity"
    android:background="#1C6BA0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The mermaids inform you that you were also once a mermaid. You have been turned into a mermaid by an evil dark lord that they have put in jail. In order to break the dark lord's curse, you must travel deep into the cave's of wonder and kill the sea lizard, Seo."
            android:id="@+id/introText"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:layout_marginTop="18dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/whatDo"
            android:layout_below="@+id/introText"
            android:id="@+id/theImage7"
            android:layout_centerHorizontal="true"
            android:src="@drawable/mermaids"
            android:padding="8dp"
            android:layout_alignParentStart="false"
            android:layout_alignParentLeft="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/whatDo"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/optionChoice1"
            android:text="Will you do it?"
            android:padding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/optionChoice1"
            android:text="Yes (cost: 2 actions)"
            android:padding="2dp"
            android:background="#f1db7e"
            android:layout_marginBottom="28dp"
            android:layout_above="@+id/optionChoice2"
            android:layout_alignLeft="@+id/optionChoice4"
            android:layout_alignStart="@+id/optionChoice4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/optionChoice2"
            android:text="No"
            android:padding="8dp"
            android:layout_alignBaseline="@+id/optionChoice3"
            android:layout_alignBottom="@+id/optionChoice3"
            android:layout_centerHorizontal="true"
            android:background="#c57ef1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/optionChoice3"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/optionChoice4"
            android:text="Explore further"
            android:padding="2dp"
            android:visibility="invisible"
            android:background="#c57ef1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/optionChoice4"
            android:text="Go back to staircase"
            android:padding="8dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:visibility="invisible" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Error"
        android:id="@+id/actionsRemaining"
        android:background="#4169E1"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
